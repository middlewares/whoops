{
    "name": "middlewares/whoops",
    "type": "library",
    "description": "Middleware to use Whoops as error handler",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "server",
        "error",
        "whoops",
        "http"
    ],
    "homepage": "https://github.com/middlewares/whoops",
    "support": {
        "issues": "https://github.com/middlewares/whoops/issues"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "filp/whoops": "^2.17",
        "middlewares/utils": "^3.0 || ^4.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8 || ^9",
        "laminas/laminas-diactoros": "^2 || ^3",
        "friendsofphp/php-cs-fixer": "^3",
        "squizlabs/php_codesniffer": "^3.11",
        "oscarotero/php-cs-fixer-config": "^1 || ^2",
        "phpstan/phpstan": "^1 || ^2"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "phpcs",
        "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "phpunit --coverage-text",
        "coverage-html": "phpunit --coverage-html=coverage"
    }
}
